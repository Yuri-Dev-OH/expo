import React, { useState } from 'react';
import { Text, SafeAreaView, StyleSheet, TextInput, TouchableOpacity, View } from 'react-native';

export default function App() {
  const [n1, setN1] = useState('');  // Peso
  const [n2, setN2] = useState('');  // Altura
  const [r, setR] = useState('');
  const [categoria, setCategoria] = useState('');

  const calcularIMC = () => {
    const peso = parseFloat(n1);
    const altura = parseFloat(n2);
    if (!isNaN(peso) && !isNaN(altura) && altura > 0) {
      const resultado = peso / (altura^2);
      setR(resultado.toFixed(2));

      // Determine a categoria do IMC
      let categoriaIMC = '';
      if (resultado < 18.5) {
        categoriaIMC = 'Abaixo do peso';
      } else if (resultado >= 18.5 && resultado < 24.9) {
        categoriaIMC = 'Peso normal';
      } else if (resultado >= 25 && resultado < 29.9) {
        categoriaIMC = 'Sobrepeso';
      } else {
        categoriaIMC = 'Obesidade';
      }
      setCategoria(categoriaIMC);
    } else {
      setR('Entrada invÃ¡lida');
      setCategoria('');
    }
  };

  return (
    <SafeAreaView style={styles.container}>
      <Text>Calculadora IMC</Text>
      <TextInput
        style={styles.input}
        value={n1}
        keyboardType="numeric"
        placeholderTextColor="gray"
        placeholder="Peso (kg)"
        onChangeText={setN1}
      />

      <TextInput
        style={styles.input}
        value={n2}
        keyboardType="numeric"
        placeholderTextColor="gray"
        placeholder="Altura (m)"
        onChangeText={setN2}
      />

      <View style={styles.buttonContainer}>
        <TouchableOpacity
          onPress={calcularIMC}
          style={styles.button}
        >
          <Text style={styles.buttonText}>Calcular IMC</Text>
        </TouchableOpacity>
      </View>

      <Text>Resposta: {r}</Text>
      {categoria ? (
        <Text>Categoria: {categoria}</Text>
      ) : null}

      <View style={styles.tableContainer}>
        <Text style={styles.tableHeader}>Tabela de IMC:</Text>
        <Text style={styles.tableRow}>Abaixo de 18.5: Abaixo do peso</Text>
        <Text style={styles.tableRow}>18.5 - 24.9: Peso normal</Text>
        <Text style={styles.tableRow}>25 - 29.9: Sobrepeso</Text>
        <Text style={styles.tableRow}>30 ou mais: Obesidade</Text>
      </View>
    </SafeAreaView>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    justifyContent: 'center',
    backgroundColor: '#ecf0f1',
    alignItems: 'center',
    padding: 8,
  },
  input: {
    margin: 10,
    borderRadius: 2,
    borderWidth: 1,
    width: 200,
    padding: 8,
  },
  buttonContainer: {
    flexDirection: 'row',
    margin: 10,
  },
  button: {
    borderWidth: 2,
    width: 150,
    margin: 5,
    borderRadius: 5,
    backgroundColor: 'gray',
    alignItems: 'center',
    justifyContent: 'center',
    padding: 10,
  },
  buttonText: {
    textAlign: 'center',
    fontWeight: 'bold',
    color: 'white',
  },
  tableContainer: {
    marginTop: 20,
    padding: 10,
    borderWidth: 1,
    borderColor: 'black',
    borderRadius: 5,
    backgroundColor: '#f8f8f8',
  },
  tableHeader: {
    fontWeight: 'bold',
    marginBottom: 10,
  },
  tableRow: {
    marginBottom: 5,
  },
});
